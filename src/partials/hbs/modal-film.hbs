    {{#if poster_path}}
    <img class="movie-image" src="https://image.tmdb.org/t/p/w500{{poster_path}}" alt="{{title}}">
    {{else}}
    <img class="movie-image" src="https://upload.wikimedia.org/wikipedia/commons/c/c2/No_image_poster.png" alt="{{title}}">
    {{/if}}
    <a class="trailer">
        <iframe width="450" height="320" src="https://www.youtube.com/embed/{{trailer}}" frameborder="0" allowfullscreen
        class="trailer"></iframe>
    </a>
    <div class="tablet-movie-container">
    <h1 class="movie-title">{{title}}</h1>
    <div class="movie-flex">
    <ul class="movie-flex__list">
        <li class="movie-flex__title">Vote / Votes</li>
        <li class="movie-flex__title">Popularity</li>
        <li class="movie-flex__title">Original Title</li>
        <li class="movie-flex__title">Genre</li>
    </ul>
    <ul class="movie-flex__list">
        <li class="movie-flex__value"><span class="movie-flex__vote">{{vote_average}}</span> <span class="movie-flex__slash">/</span><span class="movie-flex__votes">{{vote_count}}</span></li>
        <li class="movie-flex__value">{{popularity}}</li>
        <li class="movie-flex__value">{{original_title}}</li>
        {{#each genres}}
        <li class="movie-flex__value">{{name}}</li>
        {{/each}}
    </ul>
    </div>
    <h2 class="movie-title__desc">About</h2>
    <p class="movie-overview">{{overview}}</p>
    </div>
